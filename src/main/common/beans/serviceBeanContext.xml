<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Сервисы по получению Авторов цитат  -->
    <bean class="ru.nemodev.project.quotes.dao.author.jdbc.AuthorRowMapper"/>
    <bean id="authorJdbcDAO" class="ru.nemodev.project.quotes.dao.author.jdbc.AuthorJdbcDAO"/>
    <bean id="authorCacheDao" class="ru.nemodev.project.quotes.dao.author.AuthorCacheDAO">
        <constructor-arg name="authorDAO" ref="authorJdbcDAO"/>
    </bean>
    <bean id="authorServiceImpl" class="ru.nemodev.project.quotes.service.author.AuthorServiceImpl">
        <constructor-arg name="authorDAO" ref="authorCacheDao"/>
    </bean>

    <!-- Сервисы по получению Категорий цитат -->
    <bean class="ru.nemodev.project.quotes.dao.category.jdbc.CategoryRowMapper"/>
    <bean id="categoryJdbcDAO" class="ru.nemodev.project.quotes.dao.category.jdbc.CategoryJdbcDAO"/>
    <bean id="categoryCacheDAO" class="ru.nemodev.project.quotes.service.category.CategoryCacheDAO">
        <constructor-arg name="categoryDAO" ref="categoryJdbcDAO"/>
    </bean>
    <bean id="categoryServiceImpl" class="ru.nemodev.project.quotes.service.category.CategoryServiceImpl">
        <constructor-arg name="categoryDAO" ref="categoryCacheDAO"/>
    </bean>

    <!-- Сервисы по получению Цитат  -->
    <bean class="ru.nemodev.project.quotes.dao.quote.jdbc.PrepareQuoteRowMapper" scope="prototype"/>
    <bean id="simpleQuoteRowMapper" class="ru.nemodev.project.quotes.dao.quote.jdbc.SimpleQuoteRowMapper"/>
    <bean class="ru.nemodev.project.quotes.dao.quote.jdbc.QuoteJdbcDAO"/>
    <bean id="quoteServiceImpl" class="ru.nemodev.project.quotes.service.quote.QuoteServiceImpl"/>

</beans>